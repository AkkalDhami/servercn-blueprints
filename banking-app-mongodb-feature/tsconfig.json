{
  "compilerOptions": {
    "target": "ES2021",
    "module": "es2022",
    "moduleResolution": "bundler",
    // "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    // "sourceMap": true,
    "rootDir": "src",
    // "alwaysStrict": true,
    "useUnknownInCatchVariables": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": [ "./src/*" ]
    }
  },
  "include": [ "src/**/*" ],
  "exclude": [ "node_modules" ]
}
